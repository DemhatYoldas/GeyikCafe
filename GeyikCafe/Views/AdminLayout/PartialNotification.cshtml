@model List<GeyikCafe.Entities.Notification>

<li class="nav-item topbar-icon dropdown hidden-caret">
    <a class="nav-link dropdown-toggle" href="#" id="notifDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fa fa-bell"></i>
        <span class="notification">Toplam sayı gelicek</span>
    </a>
    
    <ul class="dropdown-menu notif-box animated fadeIn" aria-labelledby="notifDropdown">
        <li>
            <div class="dropdown-title">Toplam gelicek</div>
        </li>
        @foreach (var item in Model)
        {
            <li>
                <div class="notif-scroll scrollbar-outer">
                    <div class="notif-center">
                        <a href="#">
                            <div class="notif-icon notif-primary"> <i class="@item.ImageUrl"></i> </div>
                            <div class="notif-content">
                                <span class="block">
                                    @item.Title
                                </span>
                                <span class="time">@item.NotificationDate.ToShortDateString()</span>
                            </div>
                        </a>

                    </div>
                </div>
            </li>
        }

        <li>
            <a class="see-all" href="/Templates/admin/javascript:void(0);">Tüm bildirimleri göster<i class="fa fa-angle-right"></i> </a>
        </li>
    </ul>
   

</li>
