
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@Html.Action("PartialHead","Default")

<body>
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Yükleniyor...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar & Hero Start -->
        <div class="container-xxl position-relative p-0">
            @Html.Action("PartialNavbar", "Default")

            @Html.Action("PartialFeature", "Default")

        </div>
        <!-- Navbar & Hero End -->

        <!-- Service Start -->
        @Html.Action("PartialService", "Default")
        <!-- Service End -->

        <!-- About Start -->
        @Html.Action("PartialAbout", "Default")
        <!-- About End -->

        <!-- Menu Start -->
        @Html.Action("PartialMenu", "Default")
        <!-- Menu End -->

        <!-- Reservation Start -->
        @Html.Action("PartialReservation", "Default")
        <!-- Reservation Start -->

        <!-- Team Start -->
        @Html.Action("PartialTeam", "Default")
        <!-- Team End -->

        <!-- Testimonial Start -->
        @Html.Action("PartialTestimonial", "Default")
        <!-- Testimonial End -->

        <!-- Footer Start -->
        @Html.Action("PartialFooter", "Default")
        <!-- Footer End -->

        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    @Html.Action("PartialJavaScript", "Default")
</body>

</html>